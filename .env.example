# Server
URL=http://127.0.0.1
PORT=3000
APP_URL=http://127.0.0.1:3000

# Environment: development (http) or production (https)
NODE_ENV=development

# Database
DB_URL=mysql://USER:PASSWORD@HOST:PORT/DATABASE

# JWT Authentication
JWT_SECRET=
JWT_EXPIRES_IN=

# SMTP service
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_TO=
SMTP_FROM=
SMTP_USERNAME=
SMTP_PASSWORD=

# Storage: local or s3
STORAGE_TYPE=local
STORAGE_LOCAL=tmp/uploads
AWS_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# SSL certificate
SSL_KEY=/etc/letsencrypt/live/domain_here/privkey.pem
SSL_CERT=/etc/letsencrypt/live/domain_here/fullchain.pem
SSL_CA=/etc/letsencrypt/live/domain_here/chain.pem
